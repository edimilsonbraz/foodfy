<div class="item">
    <div>Email</div>
    <div class="input">
        <input 
            type="email" 
            name="email"
            placeholder="Digite seu email"
            value="{{ user.email }}"
            onblur="Validate.apply(this, 'isEmail')"
            required="required"

        >
    </div>
</div>
  
<div class="item">
    <div>Senha</div>
    <div class="input">
        <input 
            type="password" 
            name="password"
            placeholder="Digite sua senha"
            required="required"
        >
    </div>
</div>